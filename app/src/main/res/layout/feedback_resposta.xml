<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/feedback_design"
    android:orientation="vertical"

    android:padding="16dp">

    <!-- Imagem do usuário que fez o request -->

    <!-- Nome do usuário que fez o request -->
    <TextView
        android:id="@+id/tv_user_name_requester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do usuário que fez o request"
        android:fontFamily="@font/sanofisans_italic"
        android:textSize="8pt"
        />

    <!-- Pedido de Feedback -->
    <TextView
        android:id="@+id/tv_feedback_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Feedback Request"
        android:fontFamily="@font/sanofisans_regular"
        android:textSize="9pt" />

    <!-- Campo para digitar a resposta -->
    <EditText
        android:id="@+id/et_feedback_response"
        android:layout_width="377dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_feedback"
        android:hint="Digite sua resposta" />

    <!-- Botão para enviar a resposta -->
    <Button
        android:id="@+id/btn_send_feedback_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/Sanofi_Button"
        android:text="Enviar Resposta" />
</LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/Sanofi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">


    <View
        android:id="@+id/profile_view"
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="94dp"
        android:background="@drawable/icon_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_profile"
        android:layout_width="210dp"
        android:layout_height="210dp"

        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_user"
        app:layout_constraintBottom_toBottomOf="@id/profile_view"
        app:layout_constraintEnd_toEndOf="@id/profile_view"
        app:layout_constraintStart_toStartOf="@id/profile_view"
        app:layout_constraintTop_toTopOf="@id/profile_view"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/circular"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonTeste"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#443861"
        android:text="Enviar imagem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="410dp"
        android:layout_height="27dp"
        android:layout_marginTop="32dp"
        android:text="Nome"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonTeste" />

    <TextView
        android:id="@+id/user_cargo"
        android:layout_width="410dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        android:text="Cargo"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name" />

    <Button
        android:id="@+id/btn_sobre"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#6754A4"
        android:text="Sobre Você"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:icon="@drawable/sobre_icon"

        app:layout_constraintTop_toBottomOf="@id/user_cargo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:id="@+id/btn_equipe"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#6754A4"
        android:text="Gerenciar Equipe"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:icon="@drawable/equipe_icon"
        app:layout_constraintTop_toBottomOf="@id/btn_hist2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_hist2"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#6754A4"
        android:text="Histórico Feedback"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:icon="@drawable/star_icon"
        app:layout_constraintTop_toBottomOf="@id/btn_sobre"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
